<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
  <div class="container">
    <h1 class="text-primary">Weclome To The National Ideas Board</h1>
    <br>
    <table class="table table-striped table-primary table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Note</th>
          <th scope="col">Comment</th>
          <th scope="col">User id</th>
          <th scope="col" colspan="3">CRUD</th>
        </tr>
      </thead>

      <tbody>
        <% @ideas.each do |idea| %>
          
          <tr>
            <td class="h4 "><%= idea.title %></td>
            <td class="h4 "><%= idea.note %></td>
            <td class="h4 "><%= idea.comment %></td>
            <td class="h4 "><%= idea.user_id %></td>
            <td class="h4 "><%= link_to 'Show', idea %></td>
            <td class="h4 "><%= link_to 'Edit', edit_idea_path(idea) , class:"text-success" %></td>
            <td class="h4 "><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } ,class:"text-danger"%></td>
          </tr>
              
        <% end %>
        <%= current_user.id %>
      </tbody>
    </table>
  </div>

    <br>
    <button class="btn btn-primary dark">     
      <%= link_to 'New Idea', new_idea_path , class:"text-light" %>
    </button>
<% else %>
  <h1> Yo YO Go signed In first </h1>
  <%= link_to 'Sign in', new_user_session_path , class:"btn btn-primary" %>
<% end %>